<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
  <title>Product List</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", Tahoma, sans-serif;
    }

    body {
      margin: 0;
      padding: 40px;
      background: #f4f6f9;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      background: #fff;
      padding: 25px 30px;
      border-radius: 14px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }

    h2 {
      margin: 0 0 20px;
      color: #333;
      letter-spacing: 1px;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .top-bar a {
      text-decoration: none;
      padding: 10px 14px;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      transition: 0.3s;
    }

    .add-btn {
      background: linear-gradient(135deg, #4facfe, #00f2fe);
      color: white;
    }

    .logout-btn {
      background: #eee;
      color: #555;
    }

    .top-bar a:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 15px rgba(0,0,0,0.15);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      overflow: hidden;
      border-radius: 10px;
    }

    thead {
      background: #667eea;
      color: white;
    }

    th, td {
      padding: 12px 14px;
      text-align: center;
    }

    tbody tr {
      border-bottom: 1px solid #eee;
      transition: 0.2s;
    }

    tbody tr:hover {
      background: #f1f4ff;
    }

    td {
      color: #444;
    }

    .action a {
      margin: 0 5px;
      padding: 6px 10px;
      border-radius: 6px;
      font-size: 13px;
      text-decoration: none;
      font-weight: 600;
      transition: 0.2s;
    }

    .edit {
      background: #ffeaa7;
      color: #2d3436;
    }

    .delete {
      background: #ff7675;
      color: white;
    }

    .action a:hover {
      opacity: 0.85;
    }

    .footer {
      margin-top: 20px;
      text-align: center;
      font-size: 13px;
      color: #888;
    }
  </style>
</head>

<body>

<div class="container">
  <h2>ðŸ“¦ Product Management</h2>

  <div class="top-bar">
    <a class="add-btn" href="/products/add">âž• Add Product</a>
    <a class="logout-btn" href="/logout">ðŸšª Logout</a>
  </div>

  <table>
    <thead>
    <tr>
      <th>ID</th>
      <th>Model</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.ID %></td>
        <td><%= p.MODEL %></td>
        <td><%= p.PRICE %></td>
        <td><%= p.QUANTITY %></td>
        <td class="action">
          <a class="edit" href="/products/edit/<%= p.ID %>">Edit</a>
          <a class="delete" href="/products/delete/<%= p.ID %>"
             onclick="return confirm('Delete this product?')">
            Delete
          </a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

  <div class="footer">
    Â© 2026 ShopDB â€“ Product Management System
  </div>
</div>

</body>
</html>
